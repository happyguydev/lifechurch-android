<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#CABBBBBB"/>
            <gradient
                android:startColor="#CABBBBBB"
                android:endColor="#CAF0EFEF"
                android:angle="90" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#E50606"/>
            <stroke
                android:width="2dp"
                android:color="#cdcdcd" />
            <corners android:radius="10dp" />
        </shape>
    </item>


</layer-list>